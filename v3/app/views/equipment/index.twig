
<div class="d-flex justify-content-between">
    <h2>Liste des Equipments</h2>
    <div class="btn">
        <a href="?action=equipment.create" class="btn btn-primary">Ajouter un equipment</a>
    </div>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Etat</th>
            <th>Disponibilité</th>
            <th class="text-end">Atcion</th>
        </tr>
    </thead>
    <tbody>
        {% for equipment in equipments %}
            <tr>
                <td>{{ equipment.id}}</td>
                <td>{{ equipment.name }}</td>
                <td>{{ equipment.status }}</td>
                <td>{{ equipment.availability ? 'Oui' : 'Non' }}</td>
                <td class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <a class="btn btn-outline-primary btn-sm" href="?action=equipment.edit&id={{equipment.id}}">Modifier</a>
                    <a class="btn btn-outline-danger btn-sm" href="?action=equipment.delete&id={{equipment.id}}">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr> 
                <td colspan="4" class="">Aucun equipment trouvé.</td>
            <tr>
        {% endfor %}
    </tbody>
</table>

